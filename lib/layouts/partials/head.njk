{#
  HEAD PARTIAL - Contains all meta tags, SEO, and external resources
  This partial is included in the base layout and contains everything that goes in <head>
#}

{# Search engine validation meta tags (from site.json) #}
<meta name="verify-v1" content="{{ site.validate.google }}"/>
<meta name="msvalidate.01" content="{{ site.validate.ms }}" />

{# Canonical URL helps prevent duplicate content issues #}
<link rel="canonical" href="{{ site.siteURL }}{{ path }}"/>

{# Generator meta tag shows what built the site #}
<meta name="generator" value="metalsmith">

{# Essential meta tags for proper HTML5 and mobile display #}
<meta charset="utf-8"/>
<meta httpEquiv="x-ua-compatible" content="ie=edge"/>
<meta name="HandheldFriendly" content="True"/>
<meta name="MobileOptimized" content="320"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<meta httpEquiv="cleartype" content="on"/>
<meta httpEquiv="Accept-CH" content="DPR, Viewport-Width, Width"/>

{# SEO meta tags - these come from each page's frontmatter #}
<title>{{ seo.title }}</title>
<meta name="description" content="{{ seo.description }}"/>
<meta name="author" content="Werner Glinka"/>
<meta name="generator" content="metalsmith"/>

{#
  FAVICON AND ICONS
  These provide the small icons shown in browser tabs, bookmarks, and mobile home screens
  Generated using https://realfavicongenerator.net/ - a great tool for creating all icon sizes
#}
<link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png">
<link rel="manifest" href="/assets/icons/site.webmanifest">
<link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg" color="#5bbad5">
<meta name="msapplication-TileColor" content="#da532c">
<meta name="theme-color" content="#ffffff">

{#
  SOCIAL MEDIA META TAGS
  These control how your pages look when shared on social media platforms
  Twitter Cards and Open Graph (Facebook, LinkedIn, etc.) protocols
#}
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content="{{ site.description }}"/>
<meta name="twitter:title" content="{{ site.title }}"/>
<meta name="twitter:description" content="{{ site.description }}"/>
<meta name="twitter:creator" content="{{ site.author }}"/>
<meta name="twitter:image" content="{{ seo.socialImage }}"/>

{# Open Graph tags for Facebook, LinkedIn, and other platforms #}
<meta property="og:locale" content="en_US"/>
<meta property="og:type" content="article"/>
<meta property="og:title" content="{{ site.title }}"/>
<meta property="og:description" content="{{ site.description }}"/>
<meta property="og:url" content="{{ site.siteURL }}"/>
<meta property="og:site_name" content="{{ site.title }}"/>
<meta property="og:image" content="{{ seo.socialImage }}"/>
<meta property="og:updated_time" content=""}/>

{#
  EXTERNAL RESOURCES
  Fonts and stylesheets loaded from external sources and local files
#}
{# Preconnect to Google Fonts for faster loading #}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

{# Load Google Fonts with display=swap for better performance #}
<link rel="stylesheet"  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Open+Sans:wght@300&display=swap">

{# Main stylesheet - this contains all your custom CSS #}
<link rel="stylesheet" href="/assets/styles.css">