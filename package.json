{
  "name": "metalsmith-bare-bones-starter",
  "version": "0.1.2",
  "description": "A bare-bones Metalsmith starter",
  "keywords": [
    "metalsmith",
    "starter"
  ],
  "author": "werner@glinka.co",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "metalsmith -c metalsmith.js --env NODE_ENV=production",
    "start": "NODE_ENV=development DEBUG=@metalsmith* node metalsmith.js --watch",
    "serve": "browser-sync start --server 'build'",
    "lint": "eslint --fix .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "@metalsmith/drafts": "^1.3.0",
    "@metalsmith/layouts": "^3.0.0",
    "@metalsmith/markdown": "^1.10.0",
    "@metalsmith/metadata": "^0.3.0",
    "@metalsmith/permalinks": "^3.2.0",
    "jstransformer-nunjucks": "^1.2.0",
    "metalsmith": "^2.6.3",
    "metalsmith-optimize-html": "^0.5.3",
    "metalsmith-sitemap": "^1.2.2",
    "metalsmith-static-files": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
